---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const base = import.meta.env.BASE_URL;
const siteUrl = 'https://retkinskapiatka.pl';
const { title, description = 'Retkińska Piątka - charytatywny bieg na 5km w Łodzi. Atest PZLA.' } = Astro.props
const ogImage = `${siteUrl}/images/hero-cover.png`;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#2a5a6a" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="628" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Retkińska Piątka" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Oswald:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/png" href={`${base}images/logo.png`} />
    <link rel="apple-touch-icon" href={`${base}images/logo.png`} />
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <!-- Subtle grain texture overlay -->
    <div class="grain-overlay" aria-hidden="true"></div>

    <slot />
  </body>
</html>
